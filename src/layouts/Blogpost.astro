---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-full flex flex-col coolscroll backdrop-brightness-125 flex-grow items-center max-w-[100%] bg-cover bg-no-repeat">
        <a class="top-3 left-3 absolute font-['VT323'] text-[#91A4F8] tracking-wider text-lg" href="/blog">< Back</a>
        <article class="z-10 max-w-full w-[90%] min-[400px]:w-[80%] md:w-1/2 block prose lg:prose-xl text-white prose-invert mt-10 prose-headings:leading-[1.3] prose-headings:mb-2 prose-h2:mt-7">
            <slot />
        </article>
	</body>
</html>

<style>
    @import url('https://fonts.googleapis.com/css2?family=VT323&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Dongle&display=swap');
    body{
        /* background: conic-gradient(from 155.27deg at 22.05% 0%, #A310A5 -5.34deg, #3631AC 1.94deg, #200242 11.09deg, #200242 170.34deg, #A310A5 354.66deg, #3631AC 361.94deg); */
        background: #003366;
        background-image: url('/blog.png');
    }
    .noise{
        mix-blend-mode: overlay;
        background-blend-mode: overlay;
		background-image: url('/noisy.svg');
        background-color: rgba(0,0,0,0.35);
        background-repeat: repeat;
		z-index: 0;
	}
    .coolscroll::-webkit-scrollbar-track
	{
		-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	}

	.coolscroll::-webkit-scrollbar
	{
		width: 10px;
	}

	.coolscroll::-webkit-scrollbar-thumb
	{
		background-color:#FFFFFF;
		border-radius: 30px;
	}

	@media only screen and (max-width: 768px) {
        html{
		font-size: 1.2vh !important;
	}
	}

	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		font-size: 1.2vw
	}
</style>