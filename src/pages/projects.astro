---
import Layout from '../layouts/Layout.astro';
import ShowCard from '../components/ShowCard.astro';
import SlideScroll from '../components/SlideScroll.svelte';
import Social from '../components/Social.astro';
import Cred from '../components/Cred.astro';
---

<Layout title="Projects">
    <main class="flex w-full h-[80%] overflow-hidden flex-row justify-center items-center gap-4">
        <SlideScroll client:visible>
        <div class="min-w-[23%] h-full"></div>
        <ShowCard  title="ColorMash 🎨" href="ColorMash.deta.dev" body="Remember Facemash?\nfrom The Social Network.That’s it just for Color Combos\nUsing and elo rating ♟️ system to rank as voted by users." github="https://github.com/Om-Thorat/ColorMashDeta"/>
        <ShowCard  title="Spotify Readme 🎶" href="notom.vercel.app/spotify" body="An Svg widget to display your spotify now playing status anywhere!" github="https://github.com/Om-Thorat/Readme-Spotify-Now-Playing"/>
        <ShowCard  title="This Website 🎈" href="/" body="The source code for this website" github="https://github.com/Om-Thorat/Om-Thorat.github.io"/>
        <ShowCard  title="Butterfly" href="/fly" body="Dynamically routed butterfly animation made with math and javascript" github=""/>
        <ShowCard  title="ColorMash" href="Not Hosted" body="The Python Django Version\nRemember Facemash?\nfrom The Social Network.That’s it just for Color Combos\nUsing and elo rating ♟️ system to rank as voted by users." github="https://github.com/Om-Thorat/ColorMash"/>
        <div class="min-w-[23%] h-full"></div>
        </SlideScroll>
    </main>
	<footer class="h-fit w-[80%] px-[1.5rem] flex items-center">
		<Social />
		<Cred />
	</footer>
</Layout>